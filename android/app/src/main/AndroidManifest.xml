        </intent-filter>
      </activity>
      <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />
       <meta-data android:name="net.hockeyapp.android.appIdentifier" android:value="a31ed87e0e164272a6a973bdd32494c4" />
